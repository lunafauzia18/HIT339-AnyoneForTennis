@model IEnumerable<AnyoneForTennis.Models.Member>

@{
    ViewData["Title"] = "View Members";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        background-color: #e8f5ff;
        color: #333;
        padding: 20px;
    }

    h1 {
        color: #ffffff;
        background-color: #003366;
        text-align: center;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .container {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table thead {
            background-color: #004494;
            color: white;
        }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tbody tr:hover {
        background-color: #d1e7ff;
    }

    .alert {
        margin-top: 20px;
        padding: 15px;
        border-radius: 5px;
        background-color: #d9edf7;
        color: #31708f;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container">
    <h1>View Members</h1>

    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Active</th>
                <th>Enrolled Schedules</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.FirstName</td>
                    <td>@member.LastName</td>
                    <td>@member.Email</td>
                    <td>@(member.Active ? "Yes" : "No")</td>
                    <td>
                        @if (member.MemberSchedules.Any())

                        {
                            foreach (var memberSchedule in member.MemberSchedules)
                            {
                                <div>@memberSchedule.Schedule.Name (@memberSchedule.Schedule.Date.ToString("MM/dd/yyyy"))</div>
                            }

                        }

                        else

                        {
                            <div>No enrolled schedules</div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (TempData["NotificationResult"] != null)

    {
        <div class="alert">
            @TempData["NotificationResult"]
        </div>
    }
</div>
