@model List<ScheduleViewModel>

@{
    ViewData["Title"] = "Assign Coach";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #e8f5ff;
        color: #333;
        padding: 20px;
    }

    h1 {
        color: #ffffff;
        background-color: #003366;
        text-align: center;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    h4 {
        color: #003366;
        text-align: center;
        margin-bottom: 20px;
    }

    .table-container {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        max-width: 1000px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .table thead {
        background-color: #003366;
        color: #ffffff;
    }

    .table th, .table td {
        padding: 15px;
        text-align: left;
    }

    .table th {
        text-transform: uppercase;
    }

    .table tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .table tbody tr:hover {
        background-color: #d1e7ff;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 8px;
        width: 100%;
        box-sizing: border-box;
        font-size: 14px;
    }

    .form-control:focus {
        border-color: #6D83F2;
        outline: none;
        box-shadow: 0 0 5px rgba(109, 131, 242, 0.5);
    }

    .btn-primary {
        background-color: #6D83F2;
        color: #ffffff;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
        transition: background 0.3s, transform 0.2s;
        font-size: 14px;
        display: inline-block;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-primary:hover {
        background-color: #F25E73;
        transform: scale(1.05);
    }

    .back-link {
        text-decoration: none;
        color: #6D83F2;
        font-weight: bold;
        transition: color 0.3s;
    }

    .back-link:hover {
        text-decoration: underline;
        color: #F25E73;
    }


</style>

<h1>Assign Coach</h1>

<h4>Upcoming Schedules</h4>
<div class="table-container">
    <form asp-action="AssignCoach" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>Schedule Name</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Current Coach</th>
                    <th>New Coach</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Location</td>
                        <td>@Model[i].Date.ToString("MM/dd/yyyy")</td>
                        <td>@Model[i].CoachName</td>
                        <td>
                            <select asp-for="@Model[i].CoachId" class="form-control">
                                <option value="">Select Coach</option>
                                @foreach (var coach in (SelectList)ViewBag.Coaches)
                                {
                                    if (coach.Value == Model[i].CoachId.ToString())
                                    {
                                        <option value="@coach.Value" selected>@coach.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@coach.Value">@coach.Text</option>
                                    }
                                }
                            </select>
                        </td>
                        <td>
                            <input type="hidden" asp-for="@Model[i].ScheduleId" />
                            <button type="submit" class="btn-primary">Save</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a class="back-link" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
