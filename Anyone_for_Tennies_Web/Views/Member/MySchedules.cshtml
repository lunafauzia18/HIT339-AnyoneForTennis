@model IEnumerable<AnyoneForTennis.Models.Schedule>

@{
    ViewData["Title"] = "My Schedules";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        background-color: #e8f5ff;
        color: #333;
        padding: 20px;
    }

    h2 {
        color: #ffffff;
        background-color: #003366;
        text-align: center;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table thead {
            background-color: #004494;
            color: white;
        }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tbody tr:hover {
        background-color: #d1e7ff;
    }

    .table a {
        color: #6D83F2;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s;
    }

        .table a:hover {
            color: #F25E73;
            text-decoration: underline;
        }

    .no-schedules {
        text-align: center;
        padding: 20px;
        color: #555;
        font-size: 1.2em;
    }
</style>

<h2>My Schedules</h2>

@if (Model.Any())

{
    <table class="table">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Date</th>
                <th>Location</th>
                <th>Coach</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in Model)

            {
                <tr>
                    <td>@schedule.Name</td>
                    <td>@schedule.Date.ToShortDateString()</td>
                    <td>@schedule.Location</td>
                    <td>
                        @if (schedule.Coach != null)

                        {
                            <a href="@Url.Action("CoachProfile", "Member", new { id = schedule.Coach.CoachId })">
                                @schedule.Coach.FirstName @schedule.Coach.LastName
                            </a>
                        }

                        else

                        {
                            <span>N/A</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else

{
    <div class="no-schedules">You have no scheduled events.</div>
}
