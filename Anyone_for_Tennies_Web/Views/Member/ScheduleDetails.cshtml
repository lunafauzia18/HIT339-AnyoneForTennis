@model Schedule

@{
    ViewData["Title"] = "Schedule Details";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        background-color: #e8f5ff;
        color: #333;
        padding: 20px;
    }

    h2 {
        color: #ffffff;
        background-color: #003366;
        text-align: center;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    h3 {
        color: #004494;
        margin-bottom: 10px;
        text-align: center;
    }

    p {
        font-size: 1.1em;
        line-height: 1.6;
        color: #555;
        margin: 10px 0;
    }

    .details-container {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 20px auto;
    }

    a {
        color: #6D83F2;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s;
    }

        a:hover {
            color: #F25E73;
            text-decoration: underline;
        }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        text-align: center;
        color: #6D83F2;
        font-weight: bold;
        padding: 10px 15px;
        border-radius: 5px;
        background-color: #f2f2f2;
        transition: background 0.3s, color 0.3s;
    }

        .back-link:hover {
            background-color: #F25E73;
            color: #ffffff;
        }
</style>

<div class="details-container">
    <h2>Schedule Details</h2>
    <h3>@Model.Name</h3>
    <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p>
        <strong>Coach:</strong>
        @if (Model.Coach != null)

        {
            <a asp-action="CoachProfile" asp-route-id="@Model.Coach.CoachId">
                @Model.Coach.FirstName @Model.Coach.LastName
            </a>
        }

        else

        {
            <span>N/A</span>
        }
    </p>
</div>

<div>
    <a class="back-link" asp-action="MySchedules">Back to My Schedules</a>
</div>
