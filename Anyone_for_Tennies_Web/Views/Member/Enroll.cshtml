@model EnrollViewModel

@{
    ViewData["Title"] = "Schedule Enroll";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        background-color: #e8f5ff;
        color: #333;
        padding: 20px;
    }

    h2 {
        color: #ffffff;
        background-color: #003366;
        text-align: center;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table thead {
            background-color: #004494;
            color: white;
        }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tbody tr:hover {
        background-color: #d1e7ff;
    }

    .btn-primary {
        background-color: #6D83F2;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
        transition: background 0.3s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #F25E73;
            transform: scale(1.05);
        }

    a {
        color: #6D83F2;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    .enrollment-status {
        text-align: center;
        font-size: 1.2em;
        color: #4CAF50;
        font-weight: bold;
    }
</style>

<h2>Enroll in Schedule</h2>

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>Coach</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model.Schedules)

        {
            <tr>
                <td>
                    <a asp-action="ScheduleDetails" asp-route-id="@schedule.ScheduleId">@schedule.Name</a>
                </td>
                <td>@schedule.Date.ToShortDateString()</td>
                <td>@schedule.Location</td>
                <td>
                    @if (schedule.Coach != null)
                    {
                        <a asp-action="CoachProfile" asp-route-id="@schedule.Coach.CoachId">
                            @schedule.Coach.FirstName @schedule.Coach.LastName
                        </a>
                    }
                    else
                    {
                        <span>No Coach Assigned</span>
                    }
                </td>
                <td>
                    @if (Model.EnrolledScheduleIds.Contains(schedule.ScheduleId))
                    {
                        <span class="enrollment-status">&#10003; Enrolled</span>
                    }
                    else
                    {
                        <form asp-action="Enroll" method="post" style="display:inline;">
                            <input type="hidden" name="scheduleId" value="@schedule.ScheduleId" />
                            <button type="submit" class="btn-primary">Enroll</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
