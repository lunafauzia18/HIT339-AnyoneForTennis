@model AnyoneForTennis.Models.Schedule

@{
    ViewData["Title"] = "Enrolled Members";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        background-color: #e8f5ff;
        color: #333;
        padding: 20px;
    }

    h2 {
        color: #ffffff;
        background-color: #003366;
        text-align: center;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table thead {
            background-color: #004494;
            color: white;
        }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tbody tr:hover {
        background-color: #d1e7ff;
    }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        text-align: center;
        color: #6D83F2;
        font-weight: bold;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 5px;
        background-color: #f2f2f2;
        transition: background 0.3s, color 0.3s;
    }

        .back-link:hover {
            background-color: #F25E73;
            color: #ffffff;
        }

    .no-members {
        text-align: center;
        color: #555;
        margin-top: 20px;
        font-size: 1.2em;
    }
</style>

<h2>Enrolled Members for @Model.Name (@Model.Date.ToShortDateString())</h2>

@if (!Model.MemberSchedules.Any())

{
    <div class="no-members">No members enrolled for this schedule.</div>
}

else

{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var memberSchedule in Model.MemberSchedules)

            {
                <tr>
                    <td>@memberSchedule.Member.FirstName</td>
                    <td>@memberSchedule.Member.LastName</td>
                    <td>@memberSchedule.Member.Email</td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a class="back-link" asp-action="MySchedules">Back to My Schedules</a>
</div>
