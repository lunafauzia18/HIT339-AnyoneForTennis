@model IEnumerable<AnyoneForTennis.Models.Schedule>

@{
    ViewData["Title"] = "My Schedules";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        background-color: #e8f5ff;
        color: #333;
        padding: 20px;
    }

    h2 {
        color: #ffffff;
        background-color: #003366;
        text-align: center;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table thead {
            background-color: #004494;
            color: white;
        }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tbody tr:hover {
        background-color: #d1e7ff;
    }

    .btn-primary {
        background-color: #6D83F2;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
        transition: background 0.3s, transform 0.2s;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
    }

        .btn-primary:hover {
            background-color: #F25E73;
            transform: scale(1.05);
        }

    .no-schedules {
        text-align: center;
        margin-top: 20px;
        color: #555;
        font-size: 1.2em;
    }
</style>

<h2>My Schedules</h2>

@if (!Model.Any())

{
    <div class="no-schedules">No schedules found.</div>
}

else

{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in Model)

            {
                <tr>
                    <td>@schedule.Name</td>
                    <td>@schedule.Location</td>
                    <td>@schedule.Date.ToShortDateString()</td>
                    <td>@schedule.Description</td>
                    <td>
                        <a asp-action="EnrolledMembers" asp-route-id="@schedule.ScheduleId" class="btn-primary">View Enrolled Members</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
